      "one-hot encoding:\n",
      " tensor([[1., 0., 0.],\n",
      "        [0., 1., 0.],\n",
      "        [0., 0., 1.],\n",
      "        [0., 0., 1.]])\n"
     ]
    }
   ],
   "source": [
    "def to_onehot(y, num_classes):\n",
    "    y_onehot = torch.zeros(y.size(0), num_classes)\n",
    "    y_onehot.scatter_(1,y.view(-1,1).long(),1).float()\n",
    "    return y_onehot\n",
    "\n",
    "y= torch.tensor([0,1,2,2])\n",
    "y_enc = to_onehot(y,3)\n",
    "print('one-hot encoding:\\n',y_enc)\n"
   ]
